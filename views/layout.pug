doctype html
html(lang='ja')
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')

    // Bootstrap
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css")
    script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.min.js")

    // 和風スタイル
    style.
      body {
        background-color: #f9f5f0;
        font-family: 'Yu Mincho', 'Hiragino Mincho Pro', serif;
      }

      .sidebar-nav {
        background-color: #fdfaf4;
        border-right: 2px solid #a17c4d;
        padding: 1rem;
        border-radius: 0 1rem 1rem 0;
        box-shadow: 2px 0 6px rgba(0,0,0,0.1);
      }

      .sidebar-nav li {
        margin-bottom: 0.8rem;
        font-size: 1.05rem;
      }

      .sidebar-nav a {
        color: #3b2f2f;
        text-decoration: none;
      }

      .sidebar-nav a:hover {
        color: #b44d00;
        font-weight: bold;
      }

      .sidebar-nav hr {
        border-top: 1px solid #aaa;
      }

      .container-fluid {
        padding-top: 1.5rem;
      }

      h1, h2, h3 {
        font-weight: bold;
        color: #2d1e10;
        border-bottom: 2px solid #a17c4d;
        padding-bottom: 0.4rem;
        margin-bottom: 1.2rem;
      }

  body
    div.container-fluid
      div.row
        div.col-sm-2
          block sidebar
            ul.sidebar-nav
              li
                a(href='/catalog') 🏠 ホーム
              li
                a(href='/catalog/books') 📚 すべての本
              li
                a(href='/catalog/authors') 👤 著者一覧
              li
                a(href='/catalog/genres') 🏷️ ジャンル一覧
              li
                a(href='/catalog/bookinstances') 🗂️ 蔵書一覧
              li
                hr
              li
                a(href='/catalog/author/create') ✍️ 著者を追加
              li
                a(href='/catalog/genre/create') 🆕 ジャンルを追加
              li
                a(href='/catalog/book/create') 📘 本を追加
              li
                a(href='/catalog/bookinstance/create') ➕ 蔵書を追加

        div.col-sm-10
          block content
